<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
 "-//Hibernate/Hibernate Mapping DTD//EN"
 "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
 
 <hibernate-mapping>

<class name="com.tatvasoft.model.TblEmployee" table="TBLEMPLOYEE">
 
 <meta attribute="class-description">
         This class contains the Employee detail. 
      </meta>
<id name = "userid" column="USERID" type="integer">
	<generator class="assigned">
	</generator>
</id>

<property name="username" column="USERNAME" type="string"> </property>
<property name="firstname" column="FIRSTNAME" type="string"></property>
<property name="lastname" column="LASTNAME" type="string"></property>
<property name="password" column="PASSWORD" type="string"></property>
<property name="dateofbirth" column="DATEOFBIRTH" type="string"></property>
<property name="emailaddress" column="EMAILADDRESS" type="string"></property>
<property name="mobilenumber" column="MOBILENUMBER" type="double"></property>
<property name="active" column="ACTIVE" type="character"></property>
 
</class>
 
 </hibernate-mapping>